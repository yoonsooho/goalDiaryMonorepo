    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
